<archetype-script xmlns="https://helidon.io/archetype/2.0"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://helidon.io/archetype/2.0 https://helidon.io/xsd/archetype-2.0.xsd">
    <methods>
        <method name="output">
            <output>
                <transformation id="z-dot-native">
                    <replace regex="^(.*)$" replacement="$1.native"/>
                </transformation>
                <transformation id="z-dot-jlink">
                    <replace regex="^(.*)$" replacement="$1.jlink"/>
                </transformation>

                <!-- TODO top level for all modules -->
                <file source="files/.dockerignore" target="dockerignore"/>
                <!-- TODO fix multi modules docker build -->
                <templates transformations="basedir,hbs" engine="mustache">
                    <directory>files</directory>
                    <includes>
                        <include>Dockerfile.hbs</include>
                    </includes>
                    <model>
                        <value key="native-image">false</value>
                        <value key="jlink">false</value>
                    </model>
                </templates>
                <templates transformations="basedir,hbs,z-dot-native" engine="mustache" if="${docker.native-image}">
                    <directory>files</directory>
                    <includes>
                        <include>Dockerfile.hbs</include>
                    </includes>
                    <model>
                        <value key="native-image">true</value>
                        <value key="jlink">false</value>
                    </model>
                </templates>
                <templates transformations="basedir,hbs,z-dot-jlink" engine="mustache" if="${docker.jlink-image}">
                    <directory>files</directory>
                    <includes>
                        <include>Dockerfile.hbs</include>
                    </includes>
                    <model>
                        <value key="native-image">false</value>
                        <value key="jlink">true</value>
                    </model>
                </templates>
                <model>
                    <list key="readme-sections">
                        <value order="50" template="mustache" file="files/README.md.hbs"/>
                    </list>
                </model>
            </output>
        </method>
    </methods>
    <call method="output"/>
    <exec src="/features/native-image/output.xml" if="${docker.native-image}"/>
    <exec src="/features/jlink/output.xml" if="${docker.jlink-image}"/>
</archetype-script>
