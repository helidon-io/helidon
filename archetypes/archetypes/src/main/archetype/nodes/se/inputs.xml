<archetype-script xmlns="https://helidon.io/archetype/2.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="https://helidon.io/archetype/2.0 https://helidon.io/xsd/archetype-2.0.xsd">

    <step name="Application Type" optional="true">
        <inputs>
            <enum id="app-type"
                  name="Select an Application Type"
                  default="quickstart"
                  optional="true"
                  global="true">
                <option value="quickstart"
                        name="Quickstart"
                        description="Sample Helidon project that includes multiple REST operations">
                    <exec src="nodes/quickstart/inputs.xml"/>
                </option>
                <option value="database"
                        name="Database"
                        description="Helidon SE application that uses a database with the DB Client API">
                    <exec src="nodes/database/inputs.xml"/>
                </option>
                <option value="custom"
                        name="Custom"
                        description="Custom Helidon SE project"/>
            </enum>
        </inputs>
    </step>
    <step name="Media Support" optional="true">
        <exec src="features/media/inputs.xml"/>
    </step>
    <step name="Security" optional="true">
        <exec src="features/security/inputs.xml"/>
    </step>
    <step name="Database" optional="true">
        <exec src="features/database/inputs.xml"/>
    </step>
    <step name="Extra" optional="true">
        <inputs>
            <list id="extra" name="Select Additional Components" optional="true">
                <option value="webclient" name="WebClient" description="HTTP client"/>
                <option value="fault-tolerance" name="Fault Tolerance" description="System for building resilient applications"/>
                <option value="cors" name="CORS" description="Cross-Origin Resource Sharing utilities"/>
            </list>
        </inputs>
    </step>
    <step name="Observability" optional="true">
        <inputs>
            <exec src="features/metrics/inputs.xml"/>
            <exec src="features/health/inputs.xml"/>
            <exec src="features/tracing/inputs.xml"/>
        </inputs>
    </step>
</archetype-script>
