<!--suppress GrazieInspection -->
<archetype-script xmlns="https://helidon.io/archetype/2.0"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://helidon.io/archetype/2.0 https://helidon.io/xsd/archetype-2.0.xsd">
    <exec src="/nodes/mp/features/common/output.xml"/>
    <exec src="/nodes/mp/features/media/output.xml"/>
    <exec src="/nodes/mp/features/security/legacy/legacy.xml"/>
    <exec src="/nodes/mp/features/fault-tolerance/output.xml"/>
    <exec src="/nodes/mp/features/cors/output.xml"/>
    <exec src="/nodes/mp/features/health/output.xml"/>
    <exec src="/nodes/mp/features/tracing/legacy/legacy.xml" if="${tracing}"/>
    <exec src="/nodes/mp/steps/observability-output.xml"/>
    <exec src="/nodes/mp/features/native-image/output.xml"/>
    <exec src="/nodes/mp/features/docker/output.xml"/>
    <exec src="/features/kubernetes/output.xml"/>
    <exec src="/features/verrazzano/output.xml"/>
    <exec src="/nodes/mp/features/jpms/output.xml"/>
    <exec src="/nodes/mp/features/tracing/output.xml" if="${tracing}"/>
    <exec src="/nodes/mp/features/metrics/microprofile-output.xml" if="${metrics}"/>
    <exec src="/nodes/mp/features/metrics/micrometer-output.xml" if="${metrics}"/>
    <exec src="/nodes/mp/features/database/output.xml" if="${db}"/>
    <exec src="/nodes/mp/features/security/output.xml" if="${security}"/>
    <exec src="/features/maven/output.xml"/>
    <exec src="/features/customize-project/output.xml"/>
    <output>
        <model>
            <value key="helidon-test">true</value>
            <list key="microprofile-config-entries">
                <value><![CDATA[# Application properties. This is the default greeting
app.greeting=Hello
]]>
                </value>
            </list>
            <list key="MainTest-java-imports" if="${media.json-lib} == 'jsonp'">
                <value>jakarta.json.JsonObject</value>
            </list>
            <list key="MainTest-methods" if="${media.json-lib} == 'jsonp'">
                <value><![CDATA[
    @Test
    void testGreet() {
        JsonObject jsonObject = target
                .path("simple-greet")
                .request()
                .get(JsonObject.class);
        assertThat(jsonObject.getString("message"), is("Hello World!"));
    }]]>
                </value>
            </list>
            <list key="MainTest-methods" if="['jsonb', 'jackson'] contains ${media.json-lib}">
                <value><![CDATA[
    @Test
    void testGreet() {
        Message message = target
                .path("simple-greet")
                .request()
                .get(Message.class);
        assertThat(message.getMessage(), is("Hello World!"));
    }]]>
                </value>
            </list>
            <list key="dependencies">
                <map order="1000">
                    <value key="groupId">io.helidon.microprofile.bundles</value>
                    <value key="artifactId">helidon-microprofile-core</value>
                </map>
            </list>
            <list key="readme-exercise-the-application">
                <value order="999"><![CDATA[
Basic:
```
curl -X GET http://localhost:8080/simple-greet
Hello World!
```
]]>
                </value>
            </list>
            <list key="module-requires">
                <value>jakarta.cdi</value>
                <value>jakarta.inject</value>
                <value>jakarta.ws.rs</value>
                <value>io.helidon</value>
                <value>io.helidon.microprofile.config</value>
                <value>io.helidon.microprofile.server</value>
            </list>
            <value key="module-opens-package">true</value>
        </model>
    </output>
</archetype-script>
