<archetype-script xmlns="https://helidon.io/archetype/2.0"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://helidon.io/archetype/2.0 https://helidon.io/xsd/archetype-2.0.xsd">
    <variables>
        <boolean path="requires-com-oracle-coherence-cdi">true</boolean>
        <boolean path="requires-com-oracle-coherence">true</boolean>
    </variables>
    <output>
        <templates transformations="basedir,hbs,packaged" engine="mustache">
            <directory>files</directory>
            <includes>
                <include>src/main/java/__pkg__/Person.java.hbs</include>
                <include>src/main/java/__pkg__/CoherenceResource.java.hbs</include>
                <include>src/test/java/__pkg__/CoherenceResourceTest.java.hbs</include>
            </includes>
        </templates>
        <model>
            <list key="pom-properties">
                <map>
                    <value key="key">version.lib.coherence</value>
                    <value key="value">25.03</value>
                </map>
            </list>
            <list key="dependencies-management">
                <map>
                    <value key="groupId">com.oracle.coherence.ce</value>
                    <value key="artifactId">coherence-bom</value>
                    <!-- Using template to skip variable resolution -->
                    <value key="version" template="mustache">${version.lib.coherence}</value>
                    <value key="type">pom</value>
                    <value key="scope">import</value>
                </map>
            </list>
            <list key="dependencies">
                <map>
                    <value key="groupId">com.oracle.coherence.ce</value>
                    <value key="artifactId">coherence-cdi-server</value>
                </map>
                <map>
                    <value key="groupId">com.oracle.coherence.ce</value>
                    <value key="artifactId">coherence-mp-config</value>
                    <value key="scope">runtime</value>
                </map>
                <!-- This should be fixed by Set instead of List -->
                <map>
                    <value key="groupId">org.glassfish.jersey.media</value>
                    <value key="artifactId">jersey-media-json-binding</value>
                    <value key="scope">runtime</value>
                </map>
            </list>
            <list key="microprofile-config">
                <value file="files/src/main/resources/META-INF/microprofile-config.properties"/>
            </list>
            <list key="readme-exercise-the-application">
                <value file="files/README-Exercise-Application.md" template="mustache"/>
            </list>
        </model>
    </output>
</archetype-script>
