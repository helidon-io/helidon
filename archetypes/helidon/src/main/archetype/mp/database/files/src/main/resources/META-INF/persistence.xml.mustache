<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="{{pu-name}}" transaction-type="JTA">
        <jta-data-source>{{ds-name}}</jta-data-source>
        <class>{{package}}.Pokemon</class>
        <class>{{package}}.PokemonType</class>
        <properties>
            {{#common-persistence-properties}}
            <property name="{{name}}" value="{{value}}"/>
            {{/common-persistence-properties}}
            {{#main-persistence-properties}}
            <property name="{{name}}" value="{{value}}"/>
            {{/main-persistence-properties}}
        </properties>
    </persistence-unit>
</persistence>
