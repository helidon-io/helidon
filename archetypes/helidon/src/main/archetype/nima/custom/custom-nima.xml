<archetype-script xmlns="https://helidon.io/archetype/2.0"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://helidon.io/archetype/2.0 https://helidon.io/xsd/archetype-2.0.xsd">
    <presets>
        <enum path="metrics.provider">microprofile</enum>
        <enum path="tracing.provider">jaeger</enum>
        <boolean path="db">false</boolean>
    </presets>
    <exec src="/nima/common/common-nima.xml"/>
    <exec src="/common/observability.xml"/>
    <source src="/nima/custom/observability.xml"/>
    <exec src="/common/media.xml"/>
    <source src="/common/media-sources.xml"/>
    <source src="/common/extra.xml"/>
    <source src="/nima/custom/extra.xml"/>
    <output>
        <file source="files/src/main/resources/WEB/index.html" target="src/main/resources/WEB/index.html" if="${media} contains 'multipart'"/>
        <model>
            <list key="Main-routing-builder">
                <value><![CDATA[.get("/simple-greet", (req, res) -> res.send("Hello World!"))]]></value>
            </list>
            <list key="Abstract-tests">
                <value><![CDATA[
    @Test
    void testSimpleGreet() {
        try (Http1ClientResponse response = client.get("/simple-greet").request()) {
            assertThat(response.status(), is(Http.Status.OK_200));
            assertThat(response.as(String.class), is("Hello World!"));
        }
    }
]]></value>
            </list>
            <list key="readme-exercise-the-application" if="${media} contains 'json'">
                <value if="${media.json-lib} == 'jsonp'"><![CDATA[
```
curl -X GET http://localhost:8080/simple-greet
Hello World!

```
]]></value>
                <value if="${media.json-lib} == 'jsonb'"><![CDATA[
```
curl -X GET http://localhost:8080/simple-greet
{"message":"Hello World!"}

```
]]></value>
            </list>
            <list key="modules">
                <value>io.helidon.logging.common</value>
            </list>
        </model>
    </output>
</archetype-script>
