<archetype-script xmlns="https://helidon.io/archetype/2.0"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://helidon.io/archetype/2.0 https://helidon.io/xsd/archetype-2.0.xsd">

    <source src="/common/media.xml"/>
    <source src="/common/media-sources.xml"/>
    <exec src="/se/common/common-se.xml"/>
    <exec src="/common/observability.xml"/>
    <exec src="/se/custom/database.xml"/>
    <source src="/common/security.xml"/>
    <exec src="/common/extra.xml"/>
    <exec src="/common/packaging.xml"/>
    <exec src="/se/custom/custom-tests.xml"/>
    <output>
        <files if="${security}">
            <directory>files</directory>
            <includes>
                <include if="${security.atn} contains 'http-signature'">src/*/resources/keystore.p12</include>
            </includes>
        </files>
        <model>
            <value order="0" key="readme-description">Minimal Helidon SE project suitable to start from scratch.</value>
            <list key="readme-sections">
                <value file="files/README.md"/>
            </list>
            <list key="Main-createRouting">
                <value><![CDATA[        SimpleGreetService simpleGreetService = new SimpleGreetService(config);]]></value>
            </list>
            <list key="Main-routingBuilder">
                <value><![CDATA[                .register("/simple-greet", simpleGreetService)]]></value>
            </list>
            <value key="Main-readyMessage">System.out.println("WEB server is up! http://localhost:" + ws.port() + "/greet");</value>
            <list key="config-entries">
                <value file="files/application.yaml"/>
            </list>
            <list key="providers-config-entries" if="${security}">
                <value if="${security.atn} contains 'oidc'" file="files/application.oidc.yaml"/>
                <value if="${security.atn} contains 'jwt'" file="files/application.jwt.yaml"/>
                <value if="${security.atn} contains 'google'" file="files/application.google.yaml"/>
                <value if="${security.atn} contains 'http-signature'" file="files/application.http-signature.yaml"/>
                <value if="${security.atz} contains 'abac'" file="files/application.abac.yaml"/>
            </list>
            <list key="paths-config-entries" if="${security}">
                <value><![CDATA[       - path: "/simple-greet"
         methods: ["get"]
         authenticate: true]]></value>
            </list>
            <list key="paths-config-entries" if="${security}">
                <value if="${security.atz} contains 'abac'"><![CDATA[         roles-allowed: ["user"]]]></value>
            </list>
        </model>
    </output>
</archetype-script>
