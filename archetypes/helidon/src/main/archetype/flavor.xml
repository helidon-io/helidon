<archetype-script xmlns="https://helidon.io/archetype/2.0"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://helidon.io/archetype/2.0 https://helidon.io/xsd/archetype-2.0.xsd">

    <variables>
        <text path="module-dir" transient="true"><![CDATA[]]></text>
        <boolean path="multi-module" transient="true">false</boolean>
    </variables>
    <step name="Helidon Flavor" optional="true">
        <inputs>
            <enum id="flavor"
                  name="Select a Flavor"
                  default="se"
                  global="true"
                  optional="true">
                <option value="se"
                        name="Helidon SE"
                        description="Programmatic, reactive &amp; non blocking">
                    <exec src="se/se.xml"/>
                </option>
                <option value="mp"
                        name="Helidon MP"
                        description="Declarative, MicroProfile compliant">
                    <exec src="mp/mp.xml"/>
                </option>
            </enum>
        </inputs>
    </step>
    <exec src="common/customize-project.xml"/>
    <output>
        <model>
            <value key="helidon-version">${helidon-version}</value>
            <value key="flavor">${flavor}</value>
        </model>
    </output>
</archetype-script>
