package io.helidon.metrics.providers.micrometer;

import io.helidon.builder.api.Prototype;

class HelidonOtlpConfigSupport {

    private HelidonOtlpConfigSupport() {
    }

    static class CustomMethods {

        /**
         * Looks up a single config value within the metrics configuration by config key.
         *
         * @param config the {@link io.helidon.config.Config} node containing the metrics configuration
         * @param key    config key to fetch
         * @return config value
         */
        @Prototype.PrototypeMethod
        static String get(HelidonOtlpConfig config, String key) {
            return config.config()
                    .get(key)
                    .asString()
                    .orElse(null);
        }
    }
}
