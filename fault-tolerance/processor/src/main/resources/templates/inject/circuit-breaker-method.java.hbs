@Singleton
@Named("{{enclosingClassTypeName.name}}.{{breaker.methodName}}")
{{{generatedSticker}}}
class {{className}} implements CircuitBreakerMethod {
    private static final Set<Class<? extends Throwable>> APPLY_ON = Set.of(
       {{#each breaker.applyOn}}{{this}}.class{{#unless @last}},
      {{/unless}}{{/each}}
    );
    private static final Set<Class<? extends Throwable>> SKIP_ON = Set.of(
       {{#each breaker.skipOn}}{{this}}.class{{#unless @last}},
      {{/unless}}{{/each}}
    );
    private static final ErrorChecker ERROR_CHECKER = ErrorChecker.create(SKIP_ON, APPLY_ON);
    private static final List<GenericType<?>> PARAM_TYPES = List.of(
      {{#each breaker.paramTypes}}new GenericType<{{this}}>() {}{{#unless @last}},
      {{/unless}}{{/each}}
    );

    private final CircuitBreaker breaker;
    {{#if breaker.named}}
    @Inject{{/if}}
    {{className}}({{#if breaker.named}}@Named("{{breaker.name}}") Optional<CircuitBreaker> namedBreaker{{/if}}) {
      {{#if breaker.named}}this.breaker = namedBreaker.orElseGet({{className}}::produceBreaker);{{else}}this.breaker = produceBreaker();{{/if}}
    }

    private static CircuitBreaker produceBreaker() {
      return CircuitBreakerConfig.builder()
                .applyOn(APPLY_ON)
                .skipOn(SKIP_ON)
                .delay(Duration.of({{breaker.delay}}, ChronoUnit.{{breaker.timeUnit}}))
                .name("{{breaker.customName}}")
                .errorRatio({{breaker.errorRatio}})
                .volume({{breaker.volume}})
                .successThreshold({{breaker.successThreshold}})
                .build();
    }

    @Override
    public CircuitBreaker circuitBreaker() {
      return breaker;
    }

    @Override
    public List<GenericType<?>> parameterTypes() {
      return PARAM_TYPES;
    }
}
