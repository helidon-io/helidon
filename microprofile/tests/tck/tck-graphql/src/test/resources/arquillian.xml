<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://jboss.org/schema/arquillian"
        xsi:schemaLocation="
        http://jboss.org/schema/arquillian
        http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <engine>
        <property name="deploymentExportPath">target/deployments</property>
        <property name="port">8080</property>
    </engine>

    <container qualifier="helidon-embedded" default="true">
        <configuration>
            <!-- to debug - uses target directory to store extracted war -->
            <property name="useRelativePath">true</property>
            <property name="excludeArchivePattern">.*/microprofile-graphql-tck-\d+\.\d+.*?\.jar.*</property>
            <property name="useParentClassloader">false</property>
        </configuration>
    </container>
</arquillian>