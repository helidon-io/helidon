<project xmlns="http://maven.apache.org/POM/4.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>io.helidon.bundles</groupId>
        <artifactId>helidon-bundles-project</artifactId>
        <version>4.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>helidon-bundles-apt</artifactId>
    <name>Helidon Bundles APT</name>

    <description>
        Annotation processing bundles for Helidon.
        Contains:
        - Helidon Blueprint (builders)
        - Helidon Service Inject
        - Helidon Service Inject Config Driven
        - Helidon @Generated extension
        Does not contain:
        - Helidon Service Inject Jakarta
        - Helidon Service Inject Javax
        - Helidon Copyright extension
    </description>

    <properties>
        <spotbugs.skip>true</spotbugs.skip>
        <maven.source.skip>true</maven.source.skip>
        <maven.javadoc.skip>true</maven.javadoc.skip>
    </properties>

    <dependencies>
        <dependency>
            <groupId>io.helidon.codegen</groupId>
            <artifactId>helidon-codegen-apt</artifactId>
        </dependency>
        <dependency>
            <groupId>io.helidon.builder</groupId>
            <artifactId>helidon-builder-codegen</artifactId>
        </dependency>
        <dependency>
            <groupId>io.helidon.service</groupId>
             <artifactId>helidon-service-codegen</artifactId>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>release</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-jar-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>empty-sources-jar</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                                <configuration>
                                    <classifier>sources</classifier>
                                    <classesDirectory>${project.build.directory}/sources</classesDirectory>
                                </configuration>
                            </execution>
                            <execution>
                                <id>empty-javadoc-jar</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                                <configuration>
                                    <classifier>javadoc</classifier>
                                    <classesDirectory>${project.build.directory}/javadoc</classesDirectory>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
