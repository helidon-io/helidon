<archetype-script xmlns="https://helidon.io/archetype/2.0"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://helidon.io/archetype/2.0 https://helidon.io/xsd/archetype-script-2.0.xsd">

    <output>
        <transformation id="packaged">
            <replace regex="__pkg__" replacement="${package/\./\/}"/>
        </transformation>
        <templates engine="mustache" transformations="mustache,packaged">
            <directory>files/src/main/java</directory>
            <includes>
                <include>**/*.mustache</include>
            </includes>
        </templates>
        <templates engine="mustache" transformations="mustache">
            <directory>files/src/main/resources</directory>
            <includes>
                <include>**/*.mustache</include>
            </includes>
        </templates>
        <templates engine="mustache" transformations="mustache,packaged">
            <directory>files/src/test/java</directory>
            <includes>
                <include>**/*.mustache</include>
            </includes>
        </templates>
        <templates engine="mustache" transformations="mustache">
            <directory>files/src/test/resources</directory>
            <includes>
                <include>**/*.mustache</include>
            </includes>
        </templates>
        <model>
            <value key="jsonb-support">.addMediaSupport(JsonbSupport.create())</value>
            <value key="db-health">.addLiveness(DbClientHealthCheck.create(dbClient, config.get("health")))</value>
            <value key="db-service">.register("/", new PokemonService(dbClient))</value>
            <value key="db-link">System.out.println("Database here : http://localhost:" + ws.port() + "/pokemon");</value>
            <value key="db-client"><![CDATA[

        Config dbConfig = config.get("db");

        // Client services are added through a service loader
        DbClient dbClient = DbClient.builder(dbConfig).build();

        // Initialize database schema
        InitializeDb.init(dbClient);

         ]]></value>
            <list key="imports">
                <map>
                    <value key="import">java.util.logging.LogManager</value>
                </map>
                <map>
                    <value key="import">io.helidon.dbclient.DbClient</value>
                </map>
                <map>
                    <value key="import">io.helidon.dbclient.health.DbClientHealthCheck</value>
                </map>
                <map>
                    <value key="import">io.helidon.media.jsonb.JsonbSupport</value>
                </map>
            </list>
        </model>
    </output>
</archetype-script>
