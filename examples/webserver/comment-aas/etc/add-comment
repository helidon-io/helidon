SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

if [ -f "$SCRIPT_DIR/user.txt" ]; then
    export SVC_USER=`cat "$SCRIPT_DIR/user.txt"`
fi

if [ -z "$2" ]; then
    echo "Missing command line parameter! Usage: comment.sh <topic> <message>"
    exit 1
fi

if [ -z "$SVC_USER" ]; then
    echo "Contacting service http://localhost:8080"
    echo ""
    curl --noproxy localhost -X POST --data "$2" http://localhost:8080/comments/$1
else
    echo "Contacting service http://localhost:8080 as $SVC_USER"
    echo ""
    curl --noproxy localhost -H "user-identity: $SVC_USER" -X POST --data "$2" http://localhost:8080/comments/$1
fi
echo ""
